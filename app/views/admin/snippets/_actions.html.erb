<ul>
  <% if Admin::SnippetsController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_snippets_url
                  } %>
    </li>
  <% end %>
  
  <li>
    <%= link_to t('.create_new'), new_admin_snippet_url,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::SnippetsController.sortable? and Snippet.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Snippets"),
                 admin_snippets_url,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Snippets"),
                 admin_snippets_url,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
 <li><%= link_to t('.create_new_type'), new_admin_snippet_type_url({
                             :dialog => true,
                             :width => 725,
                             :height => 475
                           }),
                 :class => "add_icon" %>
 </li>
</ul>